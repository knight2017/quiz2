

<img src="http://www.fillmurray.com/200/200"/> <br>
<h2>Supporter</h2>
<hr>
<%= @supporter.errors.full_messages.join(", ") %>
<%= form_for @supporter do |f| %>
<div>
  <%= f.label :name %> <br>
  <%= f.text_field :name %>
</div>
<br>
<div>
  <%= f.label :email %> <br>
  <%= f.email_field :email %>
</div>
<br>
<div>
  <%= f.radio_button :department, 'Sales'%>
    <%= label :department_sales, 'Sales' %>
    <%= f.radio_button :department, 'Marketing' %>
    <%= label :department_marketing, 'Marketing' %>
    <%= f.radio_button :department, 'Technical' %>
    <%= label :department_technical, 'Technical' %>
</div>
<br>
<div>
  <%= f.label :message %> <br>
  <%= f.text_area :message %>
</div>
<br>
  <%= f.submit "SAVE"%>
  <% end %>
