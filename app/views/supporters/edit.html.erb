
<h2><%= "Edit Infomation for #{@supporter.name}" %></h2>

<%= form_for @supporter do |f| %>
<div>
  <%= f.label :name %> <br>
  <%= f.text_field :name %>
</div>
<br>
<div>
  <%= f.label :email %> <br>
  <%= f.text_field :email %>
</div>
<br>
<div>
  <%= f.radio_button :department, 'Sales'%>
    <%= label :department_sales, 'Sales' %>
    <%= f.radio_button :department, 'Marketing' %>
    <%= label :department_marketing, 'Marketing' %>
    <%= f.radio_button :department, 'Technical' %>
    <%= label :department_technical, 'Technical' %>
</div>
<br>
<div>
  <%= f.label :message %> <br>
  <%= f.text_area :message %>
</div>
<br>
<div>
  <%= f.radio_button :status, 'Done' %>
  <%= label :department_done, 'Done' %>
  <%= f.radio_button :status, 'Undone' %>
  <%= label :department_undone, 'Undone' %>
</div>
<br>
<%= f.submit "SAVE"%>
<% end %>
